grammar renpy
    stmt <- label? ws* message+

    ws <- [ \t]

    message <- dtriple / dsingle / squoted / dquoted 
    
    squoted <- "'" [^'\r\n]* "'"
    dquoted <- "\"" [^"\r\n]* "\""
    dtriple <- "\"\"\"" (!"\"\"\"" .)* "\"\"\""
    dsingle <- "'''" (!"'''" .)* "'''"
    
    label <- `label` ws* (![:] .)+ ws* ":" ws* "\n" 

